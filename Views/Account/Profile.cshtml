@model UserProfileViewModel
<div class="container">
    <section class="section">
        <h2 class="h2 section-title">My Info</h2>
        <br />
        <form style="margin-top:100px;">
            <div class="row">

                <div class=" p-3  col col-6">
                    <div class="row">
                        <label class="col col-4">Name: </label>
                        <input class="col col-8" style="background-color:antiquewhite" type="text" asp-for="@Model.UserProfile.Name" readonly />
                    </div>

                </div>
                @*<div class=" col col-1 "></div>*@
                <div class="p-3 col col-6 ">
                    <div class="row">
                        <label class="col col-4">Sur-Name: </label>
                        <input class="col col-8" style="background-color:antiquewhite" type="text" asp-for="@Model.UserProfile.Surname" readonly />
                    </div>
                </div>

            </div>
            <br />
            <div class="row">

                <div class="p-3 col col-6">
                    <div class="row">
                        <label class="col col-4">User Name: </label>
                        <input class="col col-8" style="background-color:antiquewhite" type="text" asp-for="@Model.UserProfile.Username" readonly />
                    </div>
                </div>

                <div class="p-3 col col-6  ">
                    <div class="row">
                        <label class="col col-4">Email: </label>
                        <input class="col col-8 " style="background-color:antiquewhite" type="text" asp-for="@Model.UserProfile.Email" readonly />
                    </div>
                </div>
            </div>
            <br />
            <div class="row">


                <div class=" p-3  col col-6">
                    <div class="row">
                        <label class="col col-4">Address: </label>
                        <input class="col col-8  " style="background-color:antiquewhite" type="text" asp-for="@Model.UserProfile.Address" readonly />
                    </div>

                </div>

                <div class="p-3 col col-6  ">
                    <div class="row">
                        <label class="col col-4">Phone </label>
                        <input class="col col-8" style="background-color:antiquewhite" type="text" asp-for="@Model.UserProfile.BusPhone" readonly />
                    </div>
                </div>


            </div>


        </form>
    </section>
    <hr />
    <section class="section">

        <h2 class="h2 section-title">My Tours List</h2>

        <ul class="popular-list" style="margin-top:100px;">
            @foreach (var item in Model.TravelList)
            {
                <li>
                    <div class="popular-card">

                        <figure class="card-banner">
                            <a asp-action="Details" asp-route-id="@item.TravelId">

                                <img src="~/assets/images/@item.urlTravelImage" style="width:300px;height:300px;" loading="lazy"
                                     alt="Kuala Lumpur, Malaysia" class="img-cover">
                            </a>

                            @*<span class="card-badge">
                        <ion-icon name="time-outline"></ion-icon>

                        <time datetime="P12D">12 Days</time>
                        </span>*@
                        </figure>

                        <div class="card-content">

                            <div class="card-wrapper">
                                <div class="card-price">@item.DepartureDate</div>

                                <div class="card-rating">
                                    <ion-icon name="star"></ion-icon>
                                    <ion-icon name="star"></ion-icon>
                                    <ion-icon name="star"></ion-icon>
                                    <ion-icon name="star"></ion-icon>
                                    <ion-icon name="star-outline"></ion-icon>


                                </div>
                            </div>

                            <h3 class="card-title">
                                <a href="#">@item.TravelName.</a>
                            </h3>

                            <address class="card-location">@item.Destination</address>

                        </div>

                    </div>
                </li>

            }




        </ul>

    </section>
    <hr />
    <section class="section">
        <h2 class="h2 section-title">Travel Info</h2>
    </section>
</div>